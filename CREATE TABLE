--- CRIAR TABELA INSTRUTORES_ADA
    CREATE TABLE STUDY.INSTRUTORES_ADA
    (INSTRUTORES_ID INT PRIMARY KEY IDENTITY(1,1),
    NOME VARCHAR (50) NOT NULL,
    EMAIL VARCHAR (50) NOT NULL,
    VALOR_HORA INT NULL,
    CERTIFICADOS VARCHAR (50));

--- CRIAR TABELA CURSOS
  CREATE TABLE STUDY.CURSOS
  (ID_CURSOS INT IDENTITY (1,1) PRIMARY KEY,
  NOME VARCHAR(50) NOT NULL,
  REQUISITO VARCHAR (255) NULL,
  CARGA_HORARIA INT NULL,
  PRECO FLOAT NULL);

--- CRIAR TABELA ALUNOS
    CREATE TABLE STUDY.ALUNOS
    (ID_ALUNOS INT PRIMARY KEY IDENTITY (1,1),
    CPF CHAR(11) NOT NULL,
    NOME VARCHAR (50) NOT NULL,
    EMAIL VARCHAR (50) NOT NULL,
    TELEFONE CHAR (14) NOT NULL,
    DATA_NASCIMENTO DATE NULL);

--- CRIAR TABELA TURMAS
    CREATE TABLE STUDY.TURMAS
    (ID_TURMAS INT PRIMARY KEY IDENTITY(1,1),
    ID_INSTRUTORES INT NOT NULL,
    ID_CURSOS INT NOT NULL,
    DATA_INICIO DATE,
    DATA_FIM DATE,
    CARGA_HORARIA INT,
    FOREIGN KEY (ID_INSTRUTORES) REFERENCES STUDY.INSTRUTORES_ADA (INSTRUTORES_ID),
    FOREIGN KEY (ID_CURSOS) REFERENCES STUDY.CURSOS(ID_CURSOS));

--- CRIAR TABELA MATRICULAS
    CREATE TABLE STUDY.MATRICULAS
    (ID_MATRICULAS INT IDENTITY (1,1) PRIMARY KEY,
    ID_TURMAS INT NOT NULL,
    ID_ALUNOS INT NOT NULL,
    DATA_MATRICULA DATE NOT NULL,
    FOREIGN KEY (ID_TURMAS) REFERENCES STUDY.TURMAS (ID_TURMAS),
    FOREIGN KEY (ID_ALUNOS) REFERENCES STUDY.ALUNOS (ID_ALUNOS));

--- CRIAR TABELA LINKS
    CREATE TABLE STUDY.LINKS
    (ID INT IDENTITY (1,1) PRIMARY KEY,
    URL VARCHAR (255) NOT NULL,
    NOME VARCHAR (255) NOT NULL,
    DESCRIPTION VARCHAR (255),
    LAST_UPDATE DATE);

